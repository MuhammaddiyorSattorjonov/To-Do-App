<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddToDo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="ADD TO DO"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="#DAF35CE3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:padding="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To Do Name"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:background="@drawable/background"
            android:id="@+id/name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To Do Name"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:background="@drawable/background"
            android:id="@+id/description"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="30dp"
            android:background="@drawable/background"
            android:id="@+id/spinner"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To Do Create Date"
            android:gravity="left"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text=""
            android:textColor="@color/black"
            android:backgroundTint="#F3F0F0"
            android:id="@+id/data"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To Do Deadline"
            android:gravity="left"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text=""
            android:textColor="@color/black"
            android:backgroundTint="#F3F0F0"
            android:id="@+id/deadline"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Save"
            android:backgroundTint="#DAF35CE3"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:id="@+id/save"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>